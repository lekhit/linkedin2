// .env


// prisma/schema.prisma
datasource db {
  provider = "cockroachdb"
  url      = env("CockroachDB_DATABASE_URL")
}
model Deta {
   id String  @id @default(dbgenerated("gen_random_uuid()"))
  name      String    
  entry_key String
  // entry key is used to associate the deta key
  Card      Card?
}




model Tags {
   id String @id @default(dbgenerated("gen_random_uuid()"))
  value String @unique
  cards Card[]
}

model Card {
   id String @id @default(dbgenerated("gen_random_uuid()"))
  company        String
  salaryView     String
  location       String?
  modeOfWork     String // remote hybrid office convert to enum
  tags           Tags[]
  deta           Deta?      @relation(fields: [detaId], references: [id])
  positionName   String
  createdAt      DateTime  @default(now())
  lastDate       String?
  applyURL       String?
  typeOfOpp      String  @default("jobs") //jobs internship freelance

  detaId      String @unique
}
